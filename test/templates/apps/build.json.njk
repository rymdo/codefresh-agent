{
  "version": "1.0",
  "kind": "pipeline",
  "metadata": {
    "name": "{{ project }}/{{ name }}",
    "project": "{{ project }}",
    "labels": {}
  },
  "spec": {
    "steps": {
      "clone": {
        "type": "git-clone",
        "title": "Cloning Repository",
        "repo": "{{ git.repo }}",
        "git": "bitbucket"
      },
      "build": {
        "type": "build",
        "title": "Building Image",
        "image_name": "{{ docker.image_name }}",
        "working_directory": "{% raw %}${{clone}}{% endraw %}",
        "dockerfile": "Dockerfile",
        "tag": "latest"
      }
    }
  }
}
